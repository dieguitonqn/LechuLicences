generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  
  // Auth fields (compatible with NextAuth)
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider if needed
  
  // Business Fields
  lastName      String?
  sector        String?   // Sector/Area
  unit          String?   // Unidad
  management    String?   // Gerencia

  // License Days
  ordinaryLicenseDays Int @default(0)
  article41Days       Int @default(0)
  sickLeaveDays       Int @default(0)
  familyCareDays      Int @default(0)
  travelDays          Int @default(0)
  
  // Role & Permissions
  role             String  @default("USER") // "USER", "ADMIN", "MANAGER"
  manageableSector String? // If manager, restricted to this sector/gerencia

  accounts      Account[]
  sessions      Session[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// NextAuth Models for completeness
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
